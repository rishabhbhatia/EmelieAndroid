<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg_primary_dark">

    <LinearLayout
        app:layout_widthPercent="70%"
        app:layout_heightPercent="100%"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/login_bg_primary"
            app:cardElevation="7dp"
            app:cardCornerRadius="25dp"
            app:contentPadding="15dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_username"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="1dp"
                    app:civ_fill_color="@color/login_bg_primary_darker"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:hint="Rishabh Bhatia"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textColorHint="@android:color/white"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/login_bg_primary"
            app:cardElevation="7dp"
            app:cardCornerRadius="25dp"
            app:contentPadding="15dp"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_username"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="1dp"
                    app:civ_fill_color="@color/login_bg_primary_darker"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:layout_marginStart="25dp"
                    android:layout_marginLeft="25dp"
                    android:text="Rishabh"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                    android:textColorHint="@android:color/white"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:buttonTint="@android:color/white"
            android:checked="true"
            android:paddingLeft="5dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/login_bg_primary_darker"
            android:text="LogIn to my account"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:elevation="7dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_forgot_pass"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            />

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>